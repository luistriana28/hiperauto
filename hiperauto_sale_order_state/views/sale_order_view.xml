<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="authorize_sale_view_form" model="ir.ui.view">
        <field name="name">authorize.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='print_quotation']" position="after">
                <button string="Authorize" type="object" states="draft,sent" name="action_authorized" class="oe_hightlight"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                <attribute name="attrs">{'invisible': [('state','not in', ('sent', 'authorized'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="states">draft,sent,authorized,sale</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,authorized,sale" />
            </xpath>
        </field>
    </record>

    <record id="sale_order_view_search_inherit_state" model="ir.ui.view">
        <field name="name">sale.order.view.search.inherit.state</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='to_invoice']" position="before">
                <filter string="Authorized" name ="authorized" domain="[('state','=','authorized')]"/>
            </xpath>
        </field>
    </record>
</odoo>
